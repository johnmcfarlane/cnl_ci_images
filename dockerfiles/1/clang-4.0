FROM johnmcfarlane/cnl_ci:base-16.04
RUN apt-get install --quiet --yes clang-4.0 \
  && update-alternatives --install /usr/bin/g++ g++ /usr/bin/clang++-4.0 10 \
  && update-alternatives --install /usr/bin/c++ c++ /usr/bin/g++ 10
ENV CC /usr/bin/clang-4.0
ENV CXX /usr/bin/clang++-4.0
RUN conan profile new default --detect
RUN conan profile update settings.compiler.libcxx=libstdc++11 default
