FROM johnmcfarlane/cnl_ci:base-20.04
RUN apt-get install --no-install-recommends --quiet --yes clang-10 clang-tidy-10
RUN update-alternatives --install /usr/bin/clang++ clang++ /usr/bin/clang++-10 1
RUN update-alternatives --install /usr/bin/clang clang /usr/bin/clang-10 1
RUN update-alternatives --install /usr/bin/clang-tidy clang-tidy /usr/bin/clang-tidy-10 1
RUN update-alternatives --install /usr/bin/c++ c++ /usr/bin/clang++ 1
RUN update-alternatives --install /usr/bin/cc cc /usr/bin/clang 1
ENV CC /usr/bin/clang-10
ENV CXX /usr/bin/clang++-10
