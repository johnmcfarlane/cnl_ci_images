FROM johnmcfarlane/cnl_ci:base-22.10
RUN apt-get update --quiet \
  && apt-get install --no-install-recommends --quiet --yes clang-15 clang-format-15 clang-tidy-15 llvm-15 \
  && rm -rf /var/lib/apt/lists/*
RUN update-alternatives --install /usr/bin/clang++ clang++ /usr/bin/clang++-15 1
RUN update-alternatives --install /usr/bin/clang clang /usr/bin/clang-15 1
RUN update-alternatives --install /usr/bin/clang-tidy clang-tidy /usr/bin/clang-tidy-15 1
RUN update-alternatives --install /usr/bin/clang-format clang-format /usr/bin/clang-format-15 1
RUN update-alternatives --install /usr/bin/c++ c++ /usr/bin/clang++ 1
RUN update-alternatives --install /usr/bin/cc cc /usr/bin/clang 1
RUN update-alternatives --install /usr/bin/llvm-symbolizer llvm-symbolizer /usr/bin/llvm-symbolizer-15 1
RUN update-alternatives --install /usr/bin/scan-build scan-build /usr/bin/scan-build-15 1
ENV CC /usr/bin/clang-15
ENV CXX /usr/bin/clang++-15
