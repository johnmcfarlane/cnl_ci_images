FROM johnmcfarlane/cnl_ci:base-18.04
RUN apt-get install --no-install-recommends --quiet --yes g++-5
RUN update-alternatives --install /usr/bin/g++ g++ /usr/bin/g++-5 1
RUN update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-5 1
RUN update-alternatives --install /usr/bin/c++ c++ /usr/bin/g++ 1
RUN update-alternatives --install /usr/bin/cc cc /usr/bin/gcc 1
ENV CC /usr/bin/gcc-5
ENV CXX /usr/bin/g++-5
